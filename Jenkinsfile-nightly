pipeline {
    agent any

    environment {
        REACT_APP_VERSION = "1.0.$BUILD_ID"
    }

    stages {
        stage('Build Docker image') {
            steps {
                sh 'docker build -f ci/Dockerfile-playwright -t my-playwrigth .'
                sh 'docker build -f ci/Dockerfile-aws-cli -t my-aws-cli .'
            }
        }
    }
}